<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/round_corners</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textSize">@dimen/headline_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black_main</item>
        <item name="android:layout_marginBottom">@dimen/space_between_btns</item>
    </style>

    <style name="SettingButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_menu_button</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:letterSpacing">.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/yandexsansdisplay_regular</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/margin16</item>
        <item name="android:gravity">center|start</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="goBackBtnStyle">
        <item name="android:layout_width">@dimen/arrow_side</item>
        <item name="android:layout_height">@dimen/arrow_side</item>
        <item name="android:layout_marginStart">@dimen/margin20</item>
        <item name="android:layout_marginTop">@dimen/margin20</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:tint">?attr/colorSecondary</item>
    </style>

    <style name="headlineText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin12</item>
        <item name="android:layout_marginTop">@dimen/margin12</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/headline_text</item>
    </style>

    <style name="SubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_max">250dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/subtext</item>
    </style>

    <style name="placeholderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/placeholderText</item>
    </style>

    <style name="playerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/playerText</item>
        <item name="android:paddingStart">@dimen/margin16</item>
        <item name="android:paddingEnd">@dimen/margin16</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="roundBtn">
        <item name="android:layout_height">@dimen/roundBtn_height</item>
        <item name="android:layout_marginTop">@dimen/margin24</item>
        <item name="android:background">@drawable/round_corners</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/roundBtn_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="playerSideBtn">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_marginBottom">29dp</item>
        <item name="backgroundTint">@color/trans_gray</item>
    </style>

    <style name="tabLayoutText">
        <item name="android:textSize">@dimen/roundBtn_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="new_playlist_edit_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">63dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/yandexsansdisplay_regular</item>
        <item name="android:hint">@string/name</item>
        <item name="android:textColorHint">@color/black_white</item>
        <item name="android:singleLine">true</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>
    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/black_white</item>
    </style>
    <style name="DialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black_white</item>
    </style>
    <style name="snackBarText">
        <item name="android:textSize">@dimen/roundBtn_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white_black</item>
    </style>

</resources>