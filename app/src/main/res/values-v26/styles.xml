<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_menu_button</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:letterSpacing">.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/yandexsansdisplay_regular</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:gravity">center|start</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black_main</item>
    </style>
</resources>